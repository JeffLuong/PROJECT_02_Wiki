<div class="container">
  <div id="main-new-art">
    <form action="/articles/<%= article.title %>?_method=PATCH" method="post">
      <label>Title</label></br>
      <input type="text"
             name="article[title]"
            value="<%= article.title %>"></br>
      <label>Author</label></br>
      <input type="text"
             name="article[author]"
            value="<%= username %>"
            readonly></br>
      <label>Categories</label></br>
      <input type="text"
             name="article[categories][]"
            value="<%= article.categories %>"></br>
     <label>Content</label></br>
     <textarea type="text"
            name="article[content]"><%= article.content %></textarea>
     <input type="submit"
           value="Publish">
<!-- value of author should be user[username] -->
    </form>

  </div>
</div>
<footer class="delete-art-footer">
  <form action="/articles/<%= article.title %>?_method=DELETE" method="post">
        <input id="delete-button"
               type="submit"
               value="Delete Article">
  </form>
</footer>
