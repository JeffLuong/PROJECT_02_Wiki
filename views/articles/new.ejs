<div class="container">
  <div id="main-new-art">
    <form action="/articles/:title" method="post">
      <label>Title</label></br>
      <input type="text"
             name="article[title]"
      placeholder="Title here."></br>
      <label>Author</label></br>
      <input type="text"
             name="article[author]"
      placeholder="Your name here."></br>
      <label>Categories</label></br>
      <input type="text"
             name="article[categories][]"
      placeholder="List your categories here."></br>
     <label>Content</label></br>
     <textarea type="text"
               name="article[content]"
        placeholder="Your content here."></textarea>
     <input type="submit"
           value="Publish">
<!-- value of author should be user[username] -->
    </form>
  </div>
</div>
<footer>
<div class="message">
  <h1><%= message %></h1>
</div>
</footer>
