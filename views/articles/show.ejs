<div class="container">
  <div id="main">
    <div id="article">
      <div class="title">
        <h1><%= article.title %></h1>
        <h3>Author: <%= article.author %></h3>
      </div>
      <div class="full">
          <%- article.content %>
        <ul>
          <% var string = article.created_at.toString(); %>
          <% var timeCreated = string.split(" ").slice(0, 5); %>
          <li>This page was created on <%= timeCreated[0] + " " + timeCreated[1] + " " + timeCreated[2] + " " + timeCreated[3] + ", at " + timeCreated[4] + "."%></li></br>
          <% var string2 = article.updated_at.toString(); %>
          <% var timeModified = string2.split(" ").slice(0, 5); %>
          <li>This page was last modified on <%= timeModified[0] + " " + timeModified[1] + " " + timeModified[2] + " " + timeModified[3] + ", at " + timeModified[4] + "."%></li></br>
          <li>Categories:
            <% article.categories.forEach(function (categories, i) { %>
            <ul>
              <li><a href="/articles/categories/<%= article.categories %>"><%= article.categories %></a></li>
            </ul>
          </li>
          <% }); %>
        </ul>
      </div>
    </div>
  </div>
</div>
<footer class="edit-art-footer">
  <span><a href="/articles/<%= article.title %>/edit"><i class="fa fa-pencil"></i></a>Edit this article.</span>
</footer>
